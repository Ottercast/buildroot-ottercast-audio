+CONFIG_SYS_I2C_MVTWSI=y
+CONFIG_LED=y
+CONFIG_LED_BLINK=y
+CONFIG_LED_GPIO=y
+CONFIG_DM_ETH_PHY=y
+CONFIG_SUN8I_EMAC=y
+CONFIG_CONS_INDEX=2
