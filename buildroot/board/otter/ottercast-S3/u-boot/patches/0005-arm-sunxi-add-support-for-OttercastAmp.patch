index 0000000000..533f5ebc0f
--- /dev/null
+++ b/arch/arm/dts/sun8i-s3-ottercast-amp.dts
@@ -0,0 +1,154 @@
+// SPDX-License-Identifier: (GPL-2.0+ OR X11)
+/*
+ * Copyright 2021 Tobias Schramm <t.schramm@t-sys.eu>
+ */
+
+/dts-v1/;
+#include "sun8i-v3.dtsi"
+#include <dt-bindings/gpio/gpio.h>
+#include <dt-bindings/input/input.h>
+
+/ {
+	model = "OtterCast Amp";
+	compatible = "ottercast,ottercast-amp", "allwinner,sun8i-s3";
+
+	aliases {
+		serial0 = &uart1;
+		ethernet0 = &emac;
+	};
+
+	chosen {
+		stdout-path = "serial0:115200n8";
+	};
+
+	leds {
+		compatible = "gpio-leds";
+
+		led1 {
+			label = "led:usr";
+			gpios = <&pio 4 0 GPIO_ACTIVE_HIGH>; /* PE0 */
+		};
+
+		led2 {
+			label = "led:pwr";
+			gpios = <&pio 4 1 GPIO_ACTIVE_HIGH>; /* PE1 */
+			default-state = "on";
+		};
+	};
+
+	/*
+	 * Power tree
+	 * This is a virtual regulator, root of the power tree
+	 */
+
+	vcc_vbus: vcc-vbus {
+		compatible = "regulator-fixed";
+		regulator-always-on;
+		regulator-name = "vcc-vbus";
+		regulator-min-microvolt = <5000000>;
+		regulator-max-microvolt = <5000000>;
+	};
+
+	/* Regulators supplied by vcc_vbus */
+
+	vcc_3v3: vcc-3v3 {
+		compatible = "regulator-fixed";
+		regulator-always-on;
+		regulator-name = "vcc-3v3";
+		regulator-min-microvolt = <3300000>;
+		regulator-max-microvolt = <3300000>;
+		vin-supply = <&vcc_vbus>;
+	};
+
+	/* Regulators supplied by vcc_3v3 */
+
+	vcc_ddr: vcc-ddr {
+		compatible = "regulator-fixed";
+		regulator-always-on;
+		regulator-name = "vcc-ddr";
+		regulator-min-microvolt = <1500000>;
+		regulator-max-microvolt = <1500000>;
+		vin-supply = <&vcc_3v3>;
+	};
+
+	vcc_1v1: vcc-1v1 {
+		compatible = "regulator-fixed";
+		regulator-always-on;
+		regulator-name = "vcc-1v1";
+		regulator-min-microvolt = <1100000>;
+		regulator-max-microvolt = <1100000>;
+		vin-supply = <&vcc_3v3>;
+	};
+
+	vcc_3v0a: vcc-3v0a {
+		compatible = "regulator-fixed";
+		regulator-always-on;
+		regulator-name = "vcc-3v0a";
+		regulator-min-microvolt = <3000000>;
+		regulator-max-microvolt = <3000000>;
+		vin-supply = <&vcc_3v3>;
+	};
+
+	wifi_pwrseq: wifi_pwrseq {
+		compatible = "mmc-pwrseq-simple";
+		reset-gpios = <&pio 1 11 GPIO_ACTIVE_LOW>; /* PB11 WL-PMU-EN */
+		post-power-on-delay-ms = <200>;
+	};
+};
+
+&emac {
+	phy-handle = <&int_mii_phy>;
+	phy-mode = "mii";
+	status = "okay";
+};
+
+&i2c1 {
+	status = "okay";
+};
+
+&mmc0 {
+	vmmc-supply = <&vcc_3v3>;
+	bus-width = <4>;
+	broken-cd;
+	status = "okay";
+};
+
+&mmc1 {
+	vmmc-supply = <&vcc_3v3>;
+	vqmmc-supply = <&vcc_3v3>;
+	mmc-pwrseq = <&wifi_pwrseq>;
+	bus-width = <4>;
+	non-removable;
+	status = "okay";
+};
+
+&mmc2 {
+	vmmc-supply = <&vcc_3v3>;
+	vqmmc-supply = <&vcc_3v3>;
+	mmc-pwrseq = <&wifi_pwrseq>;
+	bus-width = <8>;
+	non-removable;
+	status = "okay";
+};
+
+&pio {
+	vcc-pd-supply = <&vcc_3v3>;
+	vcc-pe-supply = <&vcc_3v3>;
+};
+
+&uart1 {
+	pinctrl-names = "default";
+	pinctrl-0 = <&uart1_pg_pins>;
+	status = "okay";
+};
+
+&uart2 {
+	status = "okay";
+};
+
+&pio {
+	uart1_pg_pins: uart1-pg-pins {
+		pins = "PG6", "PG7";
+		function = "uart1";
+	};
+};
