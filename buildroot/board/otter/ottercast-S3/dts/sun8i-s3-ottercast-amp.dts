/dts-v1/;
#include "sun8i-v3.dtsi"
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	model = "OtterCast Amp";
	compatible = "otter,ottercast-amp", "allwinner,sun8i-s3";

	aliases {
		serial0 = &uart1;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	soc {
		pwm: pwm@1c21400 {
			compatible = "allwinner,sun7i-a20-pwm";
			reg = <0x01c21400 0xc>;
			clocks = <&osc24M>;
			#pwm-cells = <3>;
		};

		codec: codec@1c22c00 {
		        #sound-dai-cells = <0>;
		        compatible = "allwinner,sun8i-v3s-codec";
		        reg = <0x01c22c00 0x400>;
		        interrupts = <GIC_SPI 29 IRQ_TYPE_LEVEL_HIGH>;
		        clocks = <&ccu CLK_BUS_CODEC>, <&ccu CLK_AC_DIG>;
		        clock-names = "apb", "codec";
		        resets = <&ccu RST_BUS_CODEC>;
		        dmas = <&dma 15>, <&dma 15>;
		        dma-names = "rx", "tx";
		        allwinner,codec-analog-controls = <&codec_analog>;
			allwinner,audio-routing = "Left ADC", "Line In",
						  "Right ADC", "Line In";
		};

		codec_analog: codec-analog@1c23000 {
			compatible = "allwinner,sun8i-h3-codec-analog";
			reg = <0x01c23000 0x4>;
		};
	};

	backlight: backlight {
		compatible = "pwm-backlight";
		default-brightness-level = <4095>;
		power-supply = <&vcc_3v3>;
		pinctrl-0 = <&backlight_pwm_pin>;
		pinctrl-names = "default";
		pwms = <&pwm 0 1000000 0>;
	};

	leds {
		compatible = "gpio-leds";

		led0 {
			label = "led:usr";
			gpios = <&pio 4 0 GPIO_ACTIVE_HIGH>; /* PE0 */
			linux,default-trigger = "heartbeat";
		};

		led1 {
			label = "led:pwr";
			gpios = <&pio 4 1 GPIO_ACTIVE_HIGH>; /* PE1 */
			default-state = "on";
		};
	};

        spi_lcd {
		compatible = "spi-gpio";
		#address-cells = <1>;
		ranges;

		cs-gpios = <&pio 1 9 GPIO_ACTIVE_HIGH>; /* PB9 */
		mosi-gpios = <&pio 1 7 GPIO_ACTIVE_HIGH>; /* PB7 */
		sck-gpios = <&pio 1 6 GPIO_ACTIVE_HIGH>; /* PB6 */
		num-chipselects = <1>;

		rgb-panel@0 {
			reg = <0>;
			compatible = "startek,kd35wvfpd107";
			backlight = <&backlight>;
			pinctrl-names = "default";
			pinctrl-0 = <&panel_pins>;
			VCCIO-supply = <&vcc_3v3>;
			VCC-supply = <&vcc_3v3>;

			port {
				lcd_in: endpoint {
					remote-endpoint = <&tcon0_out_lcd>;
				};
			};
		};
	};

	/*
	 * Power tree
	 * This is a virtual regulator, root of the power tree
	 * Should be replaced with stusb-provided regulator
	 */

	vcc_vbus: vcc-vbus {
		compatible = "regulator-fixed";
		regulator-always-on;
		regulator-boot-on;
		regulator-name = "vcc-vbus";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
	};

	/* Regulators supplied by vcc_vbus */

	vcc_3v3: vcc-3v3 {
		compatible = "regulator-fixed";
		regulator-always-on;
		regulator-boot-on;
		regulator-name = "vcc-3v3";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		vin-supply = <&vcc_vbus>;
	};

	/* Regulators supplied by vcc_3v3 */

	vcc_ddr: vcc-ddr {
		compatible = "regulator-fixed";
		regulator-always-on;
		regulator-boot-on;
		regulator-name = "vcc-ddr";
		regulator-min-microvolt = <1500000>;
		regulator-max-microvolt = <1500000>;
		vin-supply = <&vcc_3v3>;
	};

	vcc_1v1: vcc-1v1 {
		compatible = "regulator-fixed";
		regulator-always-on;
		regulator-name = "vcc-1v1";
		regulator-min-microvolt = <1100000>;
		regulator-max-microvolt = <1100000>;
		vin-supply = <&vcc_3v3>;
	};

	vcc_3v0a: vcc-3v0a {
		compatible = "regulator-fixed";
		regulator-always-on;
		regulator-boot-on;
		regulator-name = "vcc-3v0a";
		regulator-min-microvolt = <3000000>;
		regulator-max-microvolt = <3000000>;
		vin-supply = <&vcc_3v3>;
	};

	sound {
		compatible = "simple-audio-card";
		simple-audio-card,name = "Otter-Audio-Card";
		simple-audio-card,format = "i2s";
		simple-audio-card,bitclock-master = <&dailink0_master>;
		simple-audio-card,frame-master = <&dailink0_master>;
		simple-audio-card,mclk-fs = <256>;
		simple-audio-card,widgets =
			"Speaker", "Speaker";
		simple-audio-card,routing =
			"Speaker", "main OUTA",
			"Speaker", "main OUTB",
			"Speaker", "woofer OUTA",
			"Speaker", "woofer OUTB";
		dailink0_master: simple-audio-card,cpu {
			sound-dai = <&i2s0>;
		};
		simple-audio-card,codec@0 {
			sound-dai = <&tas_main>;
		};

		simple-audio-card,codec@1 {
			sound-dai = <&tas_woofer>;
		};
	};

	wifi_pwrseq: wifi_pwrseq {
		compatible = "mmc-pwrseq-simple";
		reset-gpios = <&pio 1 11 GPIO_ACTIVE_LOW>; /* PB11 WL-PMU-EN */
		clocks = <&rtc 1>;
		clock-names = "ext_clock";
		post-power-on-delay-ms = <200>;
		power-off-on-shutdown;
	};
};

&de {
	status = "okay";
};

&emac {
	phy-handle = <&int_mii_phy>;
	phy-mode = "mii";
	status = "okay";
};

&i2c1 {
	status = "okay";

	pinctrl-names = "default";
	pinctrl-0 = <&i2c1_pe_pins>;

	stusb@28 {
		compatible = "st,stusb4500";
		reg = <0x28>;
	};

	tas_main: tas5825m@4c {
		#sound-dai-cells = <0>;
		compatible = "ti,tas5825m";
		reg = <0x4c>;
		dvdd-supply = <&vcc_3v3>;
		pvdd-supply = <&vcc_vbus>;
		shutdown-gpios = <&pio 4 7 GPIO_ACTIVE_HIGH>;
		sound-name-prefix = "main";
		tas5825m,gpio2-func = "sdout";
	};

	tas_woofer: tas5825m@4d {
		#sound-dai-cells = <0>;
		compatible = "ti,tas5825m";
		reg = <0x4d>;
		dvdd-supply = <&vcc_3v3>;
		pvdd-supply = <&vcc_vbus>;
		shutdown-gpios = <&pio 4 8 GPIO_ACTIVE_HIGH>;
		sound-name-prefix = "woofer";
	};

	lm75@48 {
		compatible = "national,lm75b";
		reg = <0x48>;
	};
};

&i2s0 {
	status = "okay";

	pinctrl-names = "default";
	pinctrl-0 = <&i2s0_pins>;
};

&mmc0 {
	vmmc-supply = <&vcc_3v3>;
	bus-width = <4>;
	broken-cd;
	status = "okay";
};

&mmc1 {
	vmmc-supply = <&vcc_3v3>;
	vqmmc-supply = <&vcc_3v3>;
	mmc-pwrseq = <&wifi_pwrseq>;
	bus-width = <4>;
	non-removable;
	no-1-8-v;
	cap-sd-highspeed;
	status = "okay";

	brcmf: wifi@1 {
		reg = <1>;
		compatible = "brcm,bcm4329-fmac";
	};
};

&mmc2 {
	vmmc-supply = <&vcc_3v3>;
	vqmmc-supply = <&vcc_3v3>;
	bus-width = <8>;
	non-removable;
	no-1-8-v;
	pinctrl-names = "default";
	pinctrl-0 = <&mmc2_pins>;
	status = "okay";
};

&pio {
	vcc-pd-supply = <&vcc_3v3>;
	vcc-pe-supply = <&vcc_3v3>;
};

&uart1 {
	status = "okay";

	pinctrl-names = "default";
	pinctrl-0 = <&uart1_pg_pins>;
};

&uart2 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&uart2_pins>;
	uart-has-rtscts;

	bluetooth {
		compatible = "brcm,bcm4345c5";
		clocks = <&rtc 1>;
		clock-names = "lpo";
		device-wakeup-gpios = <&pio 4 4 GPIO_ACTIVE_HIGH>;
		host-wakeup-gpios = <&pio 6 8 GPIO_ACTIVE_HIGH>;
		max-speed = <1500000>;
		shutdown-gpios = <&pio 4 5 GPIO_ACTIVE_HIGH>;
		vbat-supply = <&vcc_3v3>;
		vddio-supply = <&vcc_3v3>;
	};
};

&pio {
	uart1_pg_pins: uart1-pg-pins {
		pins = "PG6", "PG7";
		function = "uart1";
	};

	i2s0_pins: i2s0-pins {
		pins = "PG10", "PG11", "PG12", "PG13";
		function = "i2s";
	};

	mmc2_pins: mmc2-pins {
		pins = "PC0", "PC1", "PC2", "PC3",
		       "PC4", "PC5", "PC6", "PC7",
		       "PC8", "PC9", "PC10";
		function = "mmc2";
		drive-strength = <30>;
		bias-pull-up;
	};

	uart2_pins: uart2-pins {
		/* TX, RX, RTS, CTS */
		pins = "PB0", "PB1", "PB2", "PB3";
		function = "uart2";
	};

	backlight_pwm_pin: backlight-pwm-pin {
		pins = "PB4";
		function = "pwm0";
	};

	panel_pins: panel-pins {
		pins = "PD0",  "PD1",  "PD2",  "PD3",  "PD4",  "PD5",
		       "PD6",  "PD7",  "PD8",  "PD9",  "PD10", "PD11",
		       "PD12", "PD13", "PD14", "PD15", "PD16", "PD17",
		       "PD18", "PD19", "PD20", "PD21";
		function = "lcd";
	};
};

&tcon0 {
	status = "okay";
};

&tcon0_out {
	tcon0_out_lcd: endpoint {
		remote-endpoint = <&lcd_in>;
	};
};

&usb_otg {
	dr_mode = "peripheral";
	status = "okay";
};

&usbphy {
	status = "okay";
};
